{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Unit tests debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["--runInBand"],
      "skipFiles": ["<node_internals>/**/*.js"],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug sample",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/ts-node",
      "args": ["${workspaceFolder}/test/samples/race/race-prevention.ts"],
      "skipFiles": ["<node_internals>/**/*.js"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
